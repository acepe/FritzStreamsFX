<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" styleClass="bordered" xmlns="http://javafx.com/javafx/8.0.101" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.acepe.fritzstreams.ui.DownloadManagerController">
   <content>
      <VBox styleClass="spaced">
         <children>
            <HBox styleClass="content-pane">
               <children>
                  <Label fx:id="titleLabel" text="Download Manager">
                     <styleClass>
                        <String fx:value="playlist-title" />
                        <String fx:value="back-button" />
                     </styleClass>
                  </Label>
               </children>
            </HBox>
            <BorderPane styleClass="spaced" VBox.vgrow="ALWAYS">
               <top>
                  <VBox styleClass="content-pane" BorderPane.alignment="CENTER">
                     <children>
                        <HBox alignment="CENTER_LEFT" styleClass="spaced">
                           <children>
                              <Button fx:id="startButton" mnemonicParsing="false" onAction="#onStartPerformed" text="Start" />
                              <Button fx:id="stopButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onStopPerformed" text="Stop" />
                              <Label fx:id="runningLabel" text="stopped" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </top>
               <bottom>
                  <HBox styleClass="spaced" BorderPane.alignment="CENTER">
                     <children>
                        <Label maxHeight="1.7976931348623157E308" text="Downloads">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="doneLabel" text="1" />
                        <Label text="/" />
                        <Label fx:id="countLabel" text="10" />
                        <ProgressBar fx:id="downloadProgress" maxWidth="1.7976931348623157E308" progress="0.0" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </bottom>
               <center>
                  <HBox BorderPane.alignment="CENTER">
                     <children>
                        <VBox fx:id="downloadsVBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="400.0" styleClass="spaced" HBox.hgrow="ALWAYS" />
                        <VBox fx:id="resultVBox">
                           <children>
                              <Label text="pending" />
                              <ListView fx:id="pendingList" maxHeight="1.7976931348623157E308" />
                              <Label text="running" />
                              <ListView fx:id="runningList" maxHeight="1.7976931348623157E308" />
                              <Label text="done" />
                              <ListView fx:id="doneList" maxHeight="1.7976931348623157E308" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </center>
            </BorderPane>
         </children>
      </VBox>
   </content>
</ScrollPane>
