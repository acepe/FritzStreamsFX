<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<fx:root styleClass="spaced" type="VBox" xmlns="http://javafx.com/javafx/8.0.101" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <javafx.scene.layout.HBox alignment="CENTER_LEFT" minWidth="100.0">
            <styleClass>
                <String fx:value="stream" />
                <String fx:value="bordered" />
                <String fx:value="spaced" />
            </styleClass>
            <children>
                <Button fx:id="cancelButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onCancelPerformed" text="Abbrechen" />
            <StackPane maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
               <children>
                  <ProgressBar fx:id="downloadProgress" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" progress="0.0" styleClass="download-progress" />
                  <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                     <children>
                            <Label fx:id="artistLabel" minWidth="-Infinity" styleClass="audio-item-artist" text="Artist" />
                            <Label styleClass="audio-item-title" text="-" />
                            <Label fx:id="titleLabel" maxWidth="1.7976931348623157E308" minWidth="100.0" styleClass="audio-item-title" text="title" HBox.hgrow="ALWAYS" />
                            <Label fx:id="downloadedSizeLabel" minWidth="-Infinity" styleClass="audio-item-duration" text="1.5 MB" textAlignment="RIGHT" />
                        <Label minWidth="-Infinity" styleClass="audio-item-duration" text="/" textAlignment="RIGHT" />
                        <Label fx:id="totalSizeLabel" minWidth="-Infinity" styleClass="audio-item-duration" text="2.5 MB" textAlignment="RIGHT" />
                     </children>
                  </HBox>
               </children>
            </StackPane>
            </children>
        </javafx.scene.layout.HBox>
    </children>
</fx:root>
