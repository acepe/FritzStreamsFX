<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<fx:root type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/8.0.101" xmlns:fx="http://javafx.com/fxml/1">
    <styleClass>
        <String fx:value="stream" />
        <String fx:value="bordered" />
        <String fx:value="spaced" />
    </styleClass>
    <children>
        <StackPane styleClass="description">
            <ImageView fx:id="imageView" fitHeight="136.0" fitWidth="240.0" pickOnBounds="true" preserveRatio="true" styleClass="bordered" />
        </StackPane>
        <VBox HBox.hgrow="ALWAYS">
            <styleClass>
                <String fx:value="description" />
                <String fx:value="spaced" />
                <String fx:value="bordered" />
            </styleClass>
            <Label fx:id="titleLabel" styleClass="title" text="Stream" wrapText="true" />
            <Label fx:id="subTitleLabel" styleClass="subtitle" text="mit" />
            <AnchorPane VBox.vgrow="ALWAYS">
                <children>
                    <ButtonBar AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
                        <buttons>
                     <Button fx:id="playListButton" disable="true" minWidth="-Infinity" mnemonicParsing="false" onAction="#onPlayListPerformed" prefWidth="120.0" styleClass="download-button" text="Playlist" />
                            <StackPane fx:id="downloadStackPane">
                                <children>
                                    <Button fx:id="downloadButton" disable="true" minWidth="-Infinity" mnemonicParsing="false" onAction="#onDownloadPerformed" prefWidth="120.0" styleClass="download-button" text="Download" />
                                    <ProgressBar fx:id="downloadProgress" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" progress="0.0" styleClass="download-progress" visible="false" />
                                </children>
                            </StackPane>
                        </buttons>
                    </ButtonBar>
                </children>
            </AnchorPane>
        </VBox>
    </children>
</fx:root>
